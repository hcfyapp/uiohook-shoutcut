{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": ["ES2020"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
